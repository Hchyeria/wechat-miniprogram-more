@import '../../app.wxss';
page{
  background-color: var(--color-backgroud-often);
  transition: all 0.2s ease-out;
}
.top{
  position: fixed;
  width: 750rpx;
  background-color: var(--color-backgroud-often);
  z-index: 5300;
}

.messageList{
  padding-bottom:70rpx;
  transition: all 0.2s ease-out;
  z-index: 5200;
  background-color: var(--color-backgroud-often);
  width:96%;
  margin:auto;
}
.messageList-motion{
  padding-bottom:70rpx;
  animation: slideup .2s;
  background-color: var(--color-backgroud-often);
  transition: all 0.2s ease-out;
}
.add{
  position: fixed;
  right:10%;
  bottom:10%;
  width: calc(1.3*var(--icon-head-size));
  height:calc(1.3*var(--icon-head-size));
  margin:0;
  padding-bottom: env(safe-area-inset-bottom);
  filter:drop-shadow(1px 2px 4px var(--color-shadow));
}
.banner{
  width: 100%;
  position:relative;
  overflow: hidden;
}
.banner-motion{
  transform-origin: bottom right;
  animation: bannermotion 7s ease-out;
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 48%;
  margin: 1%;
  margin-top: 1%
}
.banner-text{
  position:absolute;
  bottom:0;
  width:44%;
  right:0;
  height:20%;
  z-index: 995;
}